<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header_layout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/main_color">

    <ImageButton
        android:id="@+id/nav_header_img_night"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@mipmap/daily"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/fab"
        app:border_color="@android:color/white"
        app:border_width="3dp"
        android:layout_marginLeft="64dp"
        android:layout_alignTop="@+id/nav_header_img_night"
        android:layout_marginStart="19dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/nav_header_img"
        android:layout_toRightOf="@+id/nav_header_img"
        android:layout_toEndOf="@+id/nav_header_img"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/header_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="138****8039"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/header_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="会员"
            android:textColor="@color/black"
            android:background="@color/red"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>